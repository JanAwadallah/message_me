<h2 class="ui header center aligned">Welcome to MessageMe - realtime chat app</h2>
<h4 class="ui center aligned medium icon header">
<i class="sign in alternate big icon orange circular"></i>  Log in or sign up to continue
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "User Name" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
        <%= f.password_field :password, placeholder: "Password" %>
        <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Log in", class: "ui small orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui orange big button">
        <i class="signup icon"></i>
        <%= link_to "Sign Up", signup_path, class: "ui orange nolink" %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>








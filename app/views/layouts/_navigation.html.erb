<div class="ui small inverted menu">
    <div class="ui container">
        <a class="item" href="/">
            Chatroom
        </a>
        <a class="item">
            Messages
        </a>
        <div class="right menu">
        <% if !logged_in? %>
            <div class="item">

                
                <%= link_to "Sign Up", signup_path, class: "ui primary button" %>
               
            </div>
            <% else %>
            <div class="item">
            <div class="ui primary">Signed in as: <%= current_user.username %>
            </div>
            </div>
            <% end %>
            <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu">
            <% if logged_in? %>
                <%= link_to "Log out", logout_path, class: "item", method: :delete %>
            <% else %>
                <a class="item" href="login">Log in / Sign up</a>
                
            <% end %>
            </div>
            </div>
            
        </div>
    </div>

</div>

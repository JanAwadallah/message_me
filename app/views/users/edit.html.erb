<%= form_with(model: @user, local: true, class: "ui inverted form") do |f| %>
    <div class="two fields">
        <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username, placeholder: "User Name" %>
        </div>
        <div class="field"> 
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Password" %>
        </div>
    </div>
    <div class="field">
        <%= f.label :email%>
        <%= f.email_field :email, placeholder: "Email Address" %>
    </div>
       
    <div class="actions">
      <%= f.submit "Sign up", class: "ui submit button" %>
    </div>
  <% end %>




